{% extends 'base.html.twig' %}

{% block title %}Liste des liens{% endblock %}

{% block body %}
    <h1>Liste des liens</h1>

    {% if liens is empty %}
        <p>Aucun lien n’a encore été ajouté.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>URL</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for lien in liens %}
                <tr>
                    <td>{{ lien.titre }}</td>
                    <td>
                        <a href="{{ lien.url }}" target="_blank">
                            {{ lien.url }}
                        </a>
                    </td>
                    <td>{{ lien.description }}</td>
                    <td>
                        <a href="{{ path('app_lien_show', {id: lien.id}) }}" class="btn btn-primary">
                            Voir
                        </a>
                        <a href="{{ path('app_lien_edit', {id: lien.id}) }}" class="btn btn-secondary">
                            Modifier
                        </a>
                        {{ include('lien/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <br>
    <a href="{{ path('app_lien_new') }}" class="btn btn-primary">
        ➕ Ajouter un lien
    </a>
{% endblock %}
